import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.SQLException;

public class ShoeStockInsertion {

    public static void main(String[] args) {
        // Database connection parameters
        String url = "jdbc:sqlite:/path/to/your_database.db"; // Change this to the path of your SQLite database
        String shoeIdPrefix = "ABC";
        int[] shoeSizes = {6, 7, 8, 9, 10, 11, 12};
        int defaultStock = 10;

        // JDBC variables for database connection
        Connection connection = null;
        PreparedStatement preparedStatement = null;

        try {
            // Connect to the SQLite database
            connection = DriverManager.getConnection(url);

            // Loop through each shoe size and insert into the SHOESTOCK table
            for (int size : shoeSizes) {
                String stockId = shoeIdPrefix + "_" + size;
                String shoeId = stockId;

                // Generate and execute the INSERT statement
                String sql = "INSERT INTO SHOESTOCK (stock_id, shoe_id, shoe_size, stock) VALUES (?, ?, ?, ?)";
                preparedStatement = connection.prepareStatement(sql);
                preparedStatement.setString(1, stockId);
                preparedStatement.setString(2, shoeId);
                preparedStatement.setInt(3, size);
                preparedStatement.setInt(4, defaultStock);
                preparedStatement.executeUpdate();
            }

            System.out.println("Data inserted successfully.");

        } catch (SQLException e) {
            e.printStackTrace();
        } finally {
            // Close the resources
            try {
                if (preparedStatement != null) {
                    preparedStatement.close();
                }
                if (connection != null) {
                    connection.close();
                }
            } catch (SQLException e) {
                e.printStackTrace();
            }
        }
    }
}
